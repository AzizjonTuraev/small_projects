    "def website_opener(website_url):\n",
    "    \n",
    "    options = Options()\n",
    "\n",
    "    # chrome opening\n",
    "    driver = webdriver.Chrome(options=options)\n",
    "    print('Browser opened')\n",
    "\n",
    "    # website opening\n",
    "    driver.get(website_url)\n",
    "    print('The website opened')\n",
    "\n",
    "    # chrome window maximizing\n",
    "    driver.maximize_window()\n",
    "    \n",
    "    return driver\n"
   ]
  },
  {
   "cell_type": "code",
